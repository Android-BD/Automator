<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/AppBaseTheme.ActionBar</item>
        <item name="android:actionBarStyle">@style/AppBaseTheme.ActionBar</item>
    </style>

    <style name="AppBaseTheme.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_color</item>
        <item name="background">@color/actionbar_color</item>
        <item name="android:titleTextStyle">@style/TitleText</item>
        <item name="titleTextStyle">@style/TitleText</item>
    </style>

    <style name="TitleText" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>

    <style name="AppSplashTheme" parent="android:Theme.Holo.NoActionBar" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="StyledIndicators" parent="@style/AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/Theme.PageIndicatorDefaults</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">

        <!-- <item name="android:background">@drawable/custom_tab_indicator</item> -->
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <!-- <item name="android:divider">@drawable/custom_tab_indicator_divider</item> -->
<!--         <item name="android:dividerPadding">10dp</item> -->
<!--         <item name="android:showDividers">middle</item> -->
<!--         <item name="android:paddingLeft">8dp</item> -->
<!--         <item name="android:paddingRight">8dp</item> -->
<!--         <item name="android:fadingEdge">horizontal</item> -->
<!--         <item name="android:fadingEdgeLength">8dp</item> -->
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Theme.VPI" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

    <!-- "Implementation" of VPI theme. We just set the text size and color. -->
