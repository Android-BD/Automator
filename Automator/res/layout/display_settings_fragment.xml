<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_fragment_brigtness"/>

    <SeekBar
        android:id="@+id/seekBar_brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    </TableRow>
    
   
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView_autorotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_fragment_autorotation"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

    <CheckBox
        android:id="@+id/checkBox_autorotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    


        <TextView
        android:id="@+id/textView_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_fragment_sleep"/>
        
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

    <CheckBox
        android:id="@+id/check_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  

</LinearLayout>
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    


        <TextView
        android:id="@+id/textView_pulse_notification_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_fragment_pulse_notification"/>
        
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

    <CheckBox
        android:id="@+id/check_pulse_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  

</LinearLayout>
</LinearLayout>
    </LinearLayout>
